{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": ".",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "docs",
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "noRestore": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "obj/**",
          "bin/**"
        ]
      },
      {
        "src": "docs",
        "files": [
          "**/*.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Bank.Domain",
      "_appTitle": "Bank.Domain Documentation",
      "_enableSearch": true,
      "pdf": true,
      "_appLogoPath": "logo.svg",
      "_appFaviconPath": "favicon.ico"
    },
    "fileMetadata": [
      {
        "key": "ms.author",
        "value": "Bank Development Team"
      },
      {
        "key": "ms.service",
        "value": "bank-domain"
      },
      {
        "key": "ms.topic",
        "value": "reference"
      }
    ]
  }
} 